# Gráficos en Praat 6.0.31
# Gráfico simple: oscilograma y curva de tono

Erase all

# Seleccionar carpeta para gráficos
directorioGraficos$ = chooseDirectory$: "Elige la carpeta para los gráficos"

# selección del sonido
sonido$ = selected$ ("Sound")
sonido = selected ("Sound")

# extensión del archivo gráfico
extensionGraficos$ = ".'extens'"

# Formulario de datos y parámetros
form Gráficos
	word nombre_archivo
	choice tipo_inform 1
		option hombre
		option mujer
		option infante
	choice extens 1
    	option png
    	option pdf
	choice opcion 2
    	button solo_oscilograma
    	button oscilograma_y_espectrograma
	choice color_pitch 1
    	button Black
		button Blue
		button Green
	boolean titular yes
    boolean superpuestos yes
endform


if tipo_inform = 1
  piso_tono = 75
  tope_tono = 350
elsif tipo_inform = 2
  piso_tono = 120
  tope_tono = 500
elsif tipo_inform = 3
  piso_tono = 200
  tope_tono = 800
endif

# Tipo de archivo gráfico
if extens = 1
	extens$ = ".png"
	opcion_guardar = 1
elsif extens = 2
	extens$ = ".pdf"
	opcion_guardar = 2
endif

tono: To Pitch: 0, piso_tono, tope_tono

if color_pitch = 1
	color = Black
elsif color_pitch = 2
	color = Blue
elsif color_pitch = 3
	color = Magenta
endif

if opcion = 1
	color
	Select inner viewport: 0.5, 6, 0.5, 2
	select sonido
	Draw: 0, 0, 0, 0, "no", "Curve"
	One mark left: 0, "yes", "no", "yes", ""
	Draw inner box

elsif opcion = 2
	color
	Select inner viewport: 0.5, 6, 0.5, 2
	select sonido
	Draw: 0, 0, 0, 0, "no", "Curve"
	One mark left: 0, "yes", "no", "yes", ""
	Draw inner box
	Select inner viewport: 0.5, 6, 2, 4

	select spectrograma
	Paint: 0, 0, 0, 0, 100, "yes", 50, 6, 0, "no"
	Marks right every: 1000, 1, "yes", "yes", "yes"
	Text right: "yes", "KHz"
	Draw inner box
	Remove
endif

Select outer viewport: 0.35, 6.6, 0.5, 4.1

if opcion_guardar = 1
	Save as PDF file: directorioGraficos$+"/"+sonido$+extens$
elsif opcion_guardar = 2
	Save as 300-dpi PNG file: directorioGraficos$+"/"+sonido$+extens$
endif
