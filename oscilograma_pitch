# Gráficos en Praat 6.0.31
# Gráfico simple: oscilograma y curva de tono

Erase all

# Seleccionar carpeta para gráficos
directorioGraficos$ = chooseDirectory$: "Elige la carpeta para los gráficos"

# selección del sonido
sonido$ = selected$ ("Sound")
sonido = selected ("Sound")

# extensión del archivo gráfico
extensionGraficos$ = ".'extens'"

# Formulario de datos y parámetros
form Gráficos
	word nombre_archivo
	choice tipo_inform 1
		option hombre
		option mujer
		option infante
	choice extens 1
    		option png
    		option pdf
	choice color_oscilograma 1
	   	button Black
		button Blue
		button Green
	choice color_pitch 2
    		button Black
		button Blue
		button Magenta
		button Red
	boolean titular yes
endform


if tipo_inform = 1
  piso_tono = 75
  tope_tono = 350
elsif tipo_inform = 2
  piso_tono = 120
  tope_tono = 500
elsif tipo_inform = 3
  piso_tono = 200
  tope_tono = 800
endif

tono = To Pitch: 0, piso_tono, tope_tono

# Tipo de archivo gráfico
if extens = 1
	extens$ = ".png"
	opcion_guardar = 1
elsif extens = 2
	extens$ = ".pdf"
	opcion_guardar = 2
endif

Select inner viewport: 0.5, 6, 0.5, 2
select sonido

if color_oscilograma = 1
	color = Black
elsif color_oscilograma = 2
	color = Blue
elsif color_oscilograma = 3
	color = Magenta
elsif color_oscilograma = 4
	color = Red
endif

color
Draw: 0, 0, 0, 0, "no", "Curve"
One mark left: 0, "yes", "no", "yes", ""
Draw inner box
select tono

if color_pitch = 1
	color = Black
elsif color_pitch = 2
	color = Blue
elsif color_pitch = 3
	color = Magenta
elsif color_pitch = 4
	color = Red
endif

color_pitch
Select inner viewport: 0.5, 6, 2, 4
Speckle size: 1.5
Speckle: 0, 0, piso_tono, tope_tono, "no"
Marks right every: 1, 100, "yes", "yes", "yes"
Text right: "yes", "Hz"
Draw inner box
Remove

Speckle size: 1
Black

if titular = 1
Select outer viewport: 0.35, 6.6, 0.3, 4.1
Text top: "yes", sonido$
elsif Select outer viewport: 0.35, 6.6, 0.5, 4.1
endif

if opcion_guardar = 1
	Save as PDF file: directorioGraficos$+"/"+sonido$+extens$
elsif opcion_guardar = 2
	Save as 300-dpi PNG file: directorioGraficos$+"/"+sonido$+extens$
endif
