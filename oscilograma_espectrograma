# Gr치ficos en Praat 6.0.31
# Gr치fico simple: oscilograma y espectrograma

Erase all

# selecci칩n del sonido
sonido$ = selected$ ("Sound")
sonido = selected ("Sound")

extensionGraficos$ = ".'extens'"

form Gr치ficos
	word nombre_archivo
	choice tipo_inform 1
		option hombre
		option mujer
		option infante
	choice extens 1
    		option png
    		option pdf
    		option jpg
	choice opcion 2
    		button solo_oscilograma
    		button oscilograma_y_espectrograma
	choice color_oscilograma 1
    		button Black
		button Blue
		button Green
	boolean titular yes
endform

if tipo_inform = 1
	maxHz = 5000
elsif tipo_inform = 2
	maxHz = 5500
elsif tipo_inform = 3
	maxHz = 6500
endif

spectrograma = To Spectrogram: 0.005, maxHz, 0.002, 20, "Gaussian"

writeInfoLine: extensionGraficos$

if opcion = 1
	if color_oscilograma = 1
		Black
		Select inner viewport: 0.5, 6, 0.5, 2
		select sonido
		Draw: 0, 0, 0, 0, "no", "Curve"
		One mark left: 0, "yes", "no", "yes", ""
		Draw inner box
	endif

elsif opcion = 2
	if color_oscilograma = 1
		Black
		Select inner viewport: 0.5, 6, 0.5, 2
		select sonido
		Draw: 0, 0, 0, 0, "no", "Curve"
		One mark left: 0, "yes", "no", "yes", ""
		Draw inner box
		Select inner viewport: 0.5, 6, 2, 4

	select spectrograma
	Paint: 0, 0, 0, 0, 100, "yes", 50, 6, 0, "no"
	Marks right every: 1000, 1, "yes", "yes", "yes"
	Text right: "yes", "KHz"
	Draw inner box
	Remove
endif

Select outer viewport: 0.35, 6.6, 0.5, 4.1

